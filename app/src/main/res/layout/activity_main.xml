<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/gameAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gra w kości. Autor: Igor Zielak"
            android:textAlignment="center"
            android:padding="3dp"
            android:layout_marginVertical="10dp"
            android:background="@color/brown"
            android:textColor="@color/white"
            android:textSize="24dp"/>

        <Button
            android:id="@+id/throwDice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:background="@color/chocolate"
            android:text="RZUĆ KOŚĆMI"
            app:cornerRadius="0px"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="13dp">

            <TextView
                android:id="@+id/roll1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:layout_marginRight="9dp"
                android:text=" ? "
                android:textSize="45dp"/>

            <TextView
                android:id="@+id/roll2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:layout_marginRight="9dp"
                android:text=" ? "
                android:textSize="45dp"/>

            <TextView
                android:id="@+id/roll3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:layout_marginRight="9dp"
                android:text=" ? "
                android:textSize="45dp"/>

            <TextView
                android:id="@+id/roll4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:layout_marginRight="9dp"
                android:text=" ? "
                android:textSize="45dp"/>

            <TextView
                android:id="@+id/roll5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:layout_marginRight="9dp"
                android:text=" ? "
                android:textSize="45dp"/>
        </GridLayout>
        <TextView
            android:id="@+id/rollResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textAlignment="center"
            android:text="Wynik tego losowania: 0" />
        <TextView
            android:id="@+id/gameResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:textAlignment="center"
            android:text="Wynik gry: 0" />
        <TextView
            android:id="@+id/throwCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Liczba rzutów: 0" />
        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/chocolate"
            android:textColor="@color/white"
            android:layout_marginVertical="10dp"
            android:text="RESETUJ WYNIK"
            app:cornerRadius="0px"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>